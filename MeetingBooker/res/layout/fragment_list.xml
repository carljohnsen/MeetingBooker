<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView android:id="@+id/fragment_list_select"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="@string/text_selected" />
    
    <TextView android:id="@+id/fragment_list_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fragment_list_select" />
    
    <TextView android:id="@+id/fragment_list_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fragment_list_select" />
    
    <ListView android:id="@+id/fragment_list_list"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/fragment_list_name" />

</RelativeLayout>
