<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/main_lay_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <RelativeLayout
                android:id="@+id/name_avail_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:id="@+id/calendar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="75sp"
                    android:textColor="@color/white" />
                
                <TextView 
                    android:id="@+id/name_avail_space"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="75sp"
                    android:layout_toRightOf="@+id/calendar_name"
                    android:text="@string/text_blank"
                    android:textColor="@color/white" />
                
                <TextView
                    android:id="@+id/current_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/calendar_name"
                    android:layout_toRightOf="@+id/name_avail_space"
                    android:textSize="75sp"
                    android:textColor="@color/white" />
                
            </RelativeLayout>

            <DigitalClock
                android:id="@+id/main_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_avail_wrapper"
                android:layout_centerHorizontal="true"
                android:textSize="50sp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/imageview_selector"
                android:contentDescription="@string/description_settings"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:onClick="settings"
                android:src="@drawable/action_settings" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/main_title"
            android:layout_toLeftOf="@+id/main_right" >

            <RelativeLayout
                android:id="@+id/current_next_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#44222222"
                android:clickable="true"
                android:onClick="editCurrent"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/curnext_title_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_colon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/curnext_title_field"
                    android:layout_toRightOf="@+id/curnext_title_field"
                    android:text="@string/text_colon"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_title_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/curnext_colon1"
                    android:layout_toRightOf="@+id/curnext_colon1"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_description_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/curnext_title_value"
                    android:text="@string/text_description"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_colon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/curnext_colon1"
                    android:layout_alignTop="@+id/curnext_description_field"
                    android:text="@string/text_colon"
                    android:layout_marginRight="5sp"
                    android:textSize="30sp" 
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_description_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/curnext_colon2"
                    android:layout_toRightOf="@+id/curnext_colon2"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_organizer_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/curnext_description_value"
                    android:text="@string/text_organizer"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_colon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/curnext_colon1"
                    android:layout_alignTop="@+id/curnext_organizer_field"
                    android:text="@string/text_colon"
                    android:layout_marginRight="5sp"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_organizer_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/curnext_colon3"
                    android:layout_toRightOf="@+id/curnext_colon3"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_time_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/curnext_organizer_value"
                    android:text="@string/text_time"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_colon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/curnext_colon1"
                    android:layout_alignTop="@+id/curnext_time_field"
                    android:text="@string/text_colon"
                    android:layout_marginRight="5sp"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/curnext_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/curnext_colon4"
                    android:layout_toRightOf="@+id/curnext_colon4"
                    android:textSize="30sp"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/start_end_button_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/new_meeting_button"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/current_next_lay"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/next_meeting_button"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:background="@drawable/custom_button2"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="startNextMeeting"
                    android:text="@string/text_nextmeeting"
                    android:textSize="20sp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/end_meeting_button"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:background="@drawable/custom_button2"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="endMeeting"
                    android:text="@string/text_end"
                    android:textSize="20sp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/new_meeting_button"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_button2"
                android:clickable="true"
                android:gravity="center"
                android:onClick="newMeeting"
                android:text="@string/text_new_meeting"
                android:textSize="20sp"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_right"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/main_title"
            android:layout_marginLeft="10dp"
            android:background="#44222222"
            android:padding="5dp" >
            <TextView
                android:id="@+id/upcoming_meetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <ListView
                android:id="@+id/cal_event_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/upcoming_meetings" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/black_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clickable="true"
        android:onClick="tempLighten"
        android:visibility="visible" />

</RelativeLayout>