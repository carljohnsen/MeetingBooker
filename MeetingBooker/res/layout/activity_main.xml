<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/mainLayWrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/imageview_selector"
            android:contentDescription="@string/settings_description"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:onClick="settings"
            android:src="@drawable/action_settings" />

        <RelativeLayout
            android:id="@+id/margain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/calendarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="25sp" />

            <DigitalClock
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/currentAvail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clock"
                android:layout_centerHorizontal="true"
                android:textSize="100sp" />

            <RelativeLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/currentAvail"
                android:layout_marginBottom="5dp"
                android:background="#55555555" />

            <RelativeLayout
                android:id="@+id/curnextLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:layout_toLeftOf="@+id/buttonLay"
                android:background="@drawable/imageview_selector"
                android:clickable="true"
                android:onClick="editCurrent" >

                <TextView
                    android:id="@+id/currentUpcom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5sp"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/colon3"
                    android:layout_alignTop="@+id/currentUpcom"
                    android:text="@string/colon"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/currentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/currentUpcom"
                    android:layout_alignTop="@+id/currentUpcom"
                    android:layout_marginLeft="5sp"
                    android:layout_toRightOf="@+id/colon1"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/currentDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/currentTitle"
                    android:layout_marginRight="5sp"
                    android:text="@string/text_description"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/currentDescription"
                    android:layout_toRightOf="@+id/currentDescription"
                    android:text="@string/colon"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/currentDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/colon3"
                    android:layout_alignTop="@+id/colon3"
                    android:layout_marginLeft="5sp"
                    android:layout_toRightOf="@+id/colon3"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/currentOrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/currentDesc"
                    android:layout_marginRight="5sp"
                    android:text="@string/text_organizer"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/colon3"
                    android:layout_alignTop="@+id/currentOrg"
                    android:text="@string/colon"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/currentOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/colon2"
                    android:layout_marginLeft="5sp"
                    android:layout_toRightOf="@+id/colon2"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/currentStartEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/currentOrganizer"
                    android:layout_marginRight="5sp"
                    android:text="@string/text_start_end"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/colon3"
                    android:layout_alignTop="@+id/currentStartEnd"
                    android:text="@string/colon"
                    android:textSize="24sp" />

                <RelativeLayout
                    android:id="@+id/startEndLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/colon4"
                    android:layout_marginLeft="5sp"
                    android:layout_toRightOf="@+id/colon4" >

                    <TextView
                        android:id="@+id/currentStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/currentEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/currentStart"
                        android:textSize="24sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buttonLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/curnextLay"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/curnextLay" >

                <TextView
                    android:id="@+id/nextMeetingButton"
                    android:layout_width="90sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button2"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="startNextMeeting"
                    android:text="@string/text_nextmeeting"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/endMeetingButton"
                    android:layout_width="90sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button2"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="endMeeting"
                    android:text="@string/text_endmeeting"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/curnextLay"
                android:layout_marginTop="5dp"
                android:background="#55555555"
                android:layout_marginBottom="5dp" />
            
            <TextView
                android:id="@+id/upcom_meetings"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/line2"
                android:text="@string/text_upcom_meetings"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/line3"
                android:layout_below="@+id/upcom_meetings" />
            
            <RelativeLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@+id/newMeetingButton"
                android:layout_marginBottom="5dp"
                android:background="#55555555" />

            <TextView
                android:id="@+id/newMeetingButton"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_button2"
                android:clickable="true"
                android:gravity="center"
                android:onClick="newMeeting"
                android:text="@string/text_newmeeting"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/black_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clickable="true"
        android:onClick="tempLighten"
        android:visibility="visible" />

</RelativeLayout>