<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#55111111" android:centerColor="#55A8A8A8" android:startColor="#55111111" />

            <stroke android:width="1dp" android:color="#000000" />

            <corners android:radius="10px" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#55A8A8A8" android:startColor="#55A8A8A8" />

            <stroke android:width="1dp" android:color="#55555555" />

            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />

            <corners android:radius="10px" />
        </shape></item>

</selector>