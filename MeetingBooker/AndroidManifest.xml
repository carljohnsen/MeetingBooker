<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.desc.meetingbooker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.desc.meetingbooker.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/black_text" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.desc.meetingbooker.NewMeetingActivity"
            android:label="@string/title_activity_new_meeting"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.desc.meetingbooker.EditActivity"
            android:label="@string/title_activity_edit" >
        </activity>
        <activity
            android:name="com.desc.meetingbooker.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>